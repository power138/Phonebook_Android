<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.iliqn.phonebook.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        app:srcCompat="@drawable/cover" />

    <Button
        android:id="@+id/addNewContactButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/contact_add"
        android:drawable="@mipmap/contact_add"
        android:padding="33dp"
        android:text=""
        android:layout_alignBottom="@+id/updateButton"
        android:layout_toStartOf="@+id/contactListButton"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/contactListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/contact_list"
        android:drawable="@mipmap/contact_list"
        android:padding="33dp"
        android:text=""
        android:layout_marginTop="37dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/contact_delete"
        android:drawable="@mipmap/contact_delete"
        android:padding="33dp"
        android:text=""
        android:layout_alignBaseline="@+id/addNewContactButton"
        android:layout_alignBottom="@+id/addNewContactButton"
        android:layout_toEndOf="@+id/contactListButton" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/contact_edit"
        android:drawable="@mipmap/contact_edit"
        android:padding="33dp"
        android:text=""
        android:layout_below="@+id/contactListButton"
        android:layout_alignStart="@+id/contactListButton" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="PHONEBOOK"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

</RelativeLayout>
